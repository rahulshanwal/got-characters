<% include ../partials/header %>
<div class="container new-house">
        <h2>Enter House details</h2>
        <div>
            <form method="post" action="/houses">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="House Name" name="house[name]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="sigil" name="house[sigil]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Motto" name="house[motto]">
                </div>
                <div class="form-group">
                    <textarea rows="4" class="form-control" placeholder="History of the house" name="house[history]"></textarea>
                </div>
                <button class="btn btn-lg btn-danger"> Register</button>
            </form>
            <h4>
                <a href="/houses">Go Back</a>
            </h4>
        </div>
</div>
<% include ../partials/footer %>