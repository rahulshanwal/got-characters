<% include ../partials/header %>
<div class="container new-member">
        <h2>Enter Member details</h2>
        <div>
            <form method="post" action="/members">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" name="member[name]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="image url" name="member[image]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="favorite dialog" name="member[dialog]">
                </div>
                <div class="form-group">
                    <textarea rows="4" class="form-control" placeholder="Personality description" name="member[description]"></textarea>
                </div>
                <button class="btn btn-lg btn-danger"> Register</button>
            </form>
            <h4>
                <a href="/members">Go Back</a>
            </h4>
        </div>
</div>
<% include ../partials/footer %>